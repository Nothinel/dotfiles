# If not running interactively, don't do anything
[[ $- != *i* ]] && return

#alias ls='ls --color=auto'
PS1='[\u@\h \W]\$ '

#Pythonverzeichniss einbinden
PYTHONPATH="${PYTHONPATH}:/home/kr80cora/NextCloud/Dokumente/Python"
PATH=$PATH:~/scripts
PATH=$PATH:~/scripts/Auswertungsscripte/

export PYTHONPATH


set -o vi
alias ls='lsd'
shopt -s autocd
alias mute='amixer set Master mute'
alias unmute='amixer set Master unmute && amixer set Speaker unmute'
alias nps='MakeNewPythonscript.sh'
alias nls='MakeNewLaTeXscript.sh'
alias nbs='MakeNewBashscript.sh'

# >>> conda initialize >>>
# !! Contents within this block are managed by 'conda init' !!
__conda_setup="$('/home/kr80cora/xraylarch/bin/conda' 'shell.bash' 'hook' 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__conda_setup"
else
    if [ -f "/home/kr80cora/xraylarch/etc/profile.d/conda.sh" ]; then
        . "/home/kr80cora/xraylarch/etc/profile.d/conda.sh"
    else
        export PATH="/home/kr80cora/xraylarch/bin:$PATH"
    fi
fi
unset __conda_setup
# <<< conda initialize <<<

